{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "watch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                "./Kafkaf.csproj",
                "--verbose"
            ],
            "serverReadyAction":{
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafkaf": {
    "Clusters": [
      {
        "Address": "localhost:9092,localhost:29092",
        "Alias": "local"        
      },
      {
        "Address": "127.0.0.1:9092,127.0.0.1:29092",
        "Alias": "TestCluster"        
      }
    ],
    "KafkaAdminService": {
      "TimeoutInSeconds": 10,
      "OperationTimeout": 10,
      "RequestTimeout": 10
    },
    "WatermarkOffsets": {
      "GroupId": "__offset_query_group",
      "TimeoutInSeconds": 11
    },
    "MessagesReaderService": {
      "GroupId": "__messages_reader_group",
      "TimeoutInSeconds": 12,
      "ConsumeTimeoutInSeconds": 2,
      "MaxMessages":  25
    }
  }
}
